{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "types": [
      "node",
      "jest"
    ]
  }
}
