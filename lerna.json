{
  "version": "1.4.2",
  "packages": [
    "packages/*"
  ],
  "ignoreChanges": [
    "**/*.spec.ts",
    "**/*.md",
    "package-lock.json"
  ],
  "command": {
    "bootstrap": {
      "hoist": true
    },
    "version": {
      "message": "chore: new version %s",
      "conventionalCommits": true,
      "exact": true
    },
    "publish": {
      "allowBranch": "master",
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "yes": true
    }
  }
}
